# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Django Settings
DEBUG=False
DJANGO_SETTINGS_MODULE=wepool_project.settings_prod
SECRET_KEY=your-super-secret-key-here-make-it-long-and-random-at-least-50-characters

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=wepool_db
DB_USER=wepool_user
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@wepooltribe.com

# Security Settings
ALLOWED_HOSTS=wepooltribe.com,www.wepooltribe.com,your-domain.com
CSRF_TRUSTED_ORIGINS=https://wepooltribe.com,https://www.wepooltribe.com,https://your-domain.com

# Optional: Redis for caching (if you want to add it later)
# REDIS_URL=redis://redis:6379/0

# Optional: Sentry for error tracking (if you want to add it later)
# SENTRY_DSN=your-sentry-dsn